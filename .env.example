# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/chatbot
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatbot
USE_MONGODB_EMBEDDINGS=true

# AI API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
MISTRAL_API_KEY=your-mistral-api-key-here
GEMINI_API_KEY=your-google-gemini-api-key-here
VOYAGE_API_KEY=your-voyage-api-key-here

# External APIs
TAVILY_API_KEY=your-tavily-api-key-here
WEATHERAPI_API_KEY=your-weatherapi-key-here

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Voyage AI Settings
VOYAGE_BATCH_SIZE=3
VOYAGE_BATCH_DELAY=2000
VOYAGE_MAX_RETRIES=3

# Feature Flags
INTELLIGENT_SEARCH=false